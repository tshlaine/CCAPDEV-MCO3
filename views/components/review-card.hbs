      <svg class="bullets" width="100%" height="7" viewBox="0 0 36 7" xmlns="http://www.w3.org/2000/svg"></svg>
      <!-- CAROUSEL EFFECT -->
      <button class="left clickable">
        <img src="../assets/svg/left-arrow-btn.svg" alt="left">
      </button>
      <div class="img-container">
        <ul class="tracker">
          <li class="slide current-slide">
            <img src="../{{image1}}" alt="review-pic-1">
          </li>
          <li class="slide">
            <img src="../{{image2}}" alt="review-pic-2">
          </li>
          <li class="slide">
            <img src="../{{image3}}" alt="review-pic-3">
          </li>
          <li class="slide">
            <img src="../{{image4}}" alt="review-pic-4">
          </li>
        </ul>
      </div>
      <button class="right clickable">
        <img src="../assets/svg/right-arrow-btn.svg" alt="right">
      </button>
    </div>

    <span class="reply-display" style="{{displayReply}}"><strong>Owner's Reply&nbsp;</strong>{{ownersReply}}</span>

    <form class="reply" action="/owners-reply" method="POST" style="display:none;">
      <textarea class="add-reply" name="ownersReply" rows="1" placeholder="Add a reply...">{{repValue}}</textarea>
      <button class="post-reply" name="postReply" type="submit" value="Post">{{postOrEditReply}}</button>
      <input type="text" name="revId" value="{{reviewId}}" style="display:none;">
    </form>

    <form action="/delete-review" method="POST" style="display: none;">
      <input type="text" name="reviewId" value="{{reviewId}}">
      <button class="delete-button" type="submit"></button>
    </form>
  </div>

  <script type="module" src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
  <script>
    $(document).ready(function () {
      // FLAG FUNCTIONALITY
      var greenFlag = "#41C45E";
      var grayFlag = "#595959";
      var redFlag = "#ED352F";
      let rating = "{{rating}}";
      for (let index = 1; index < 6; index++) {
        let flag = $('.rev-con-self.{{cardNum}} .review-card .top .rating .flag-' + index);
        if (index <= rating) {
          if (rating <= 2)
            flag.css('fill', redFlag);
          else
            flag.css('fill', greenFlag);
        } else {
          flag.css('fill', grayFlag);
        }
      }

      // READ MORE FUNCTIONALITY
      var fullText = $(".rev-con-self.{{cardNum}} .body .main-text").text();
      if (fullText.length > 280) {
        var prevText = fullText.slice(0, 260) + "...";
        $(".rev-con-self.{{cardNum}} .body .main-text").text(prevText);
        $(".rev-con-self.{{cardNum}} .body .read-more").click(function () {
          $(".rev-con-self.{{cardNum}} .body .main-text").text(fullText);
          $(".rev-con-self.{{cardNum}} .body .read-more").css('display', 'none');
        });
      } else {
        $(".rev-con-self.{{cardNum}} .body .read-more").css('display', 'none');
      }

      // LIKE/DISLIKE FUNCTIONALITY
      var review = "{{{reviewId}}}";
      var likeList = [{{{ likeList }}}];
    var dislikeList = [{{{ dislikeList }}}];
    var viewer = "{{viewer}}";
    var reviewStatusLike = "";
    var reviewStatusDislike = "";

    if (viewer) {
      if (likeList.length != 0) {
        if (likeList[0].includes(viewer)) {
          reviewStatusLike = "liked";
        }
      }
      if (dislikeList.length != 0) {
        if (dislikeList[0].includes(viewer)) {
          reviewStatusDislike = "disliked";
        }
      }

      const LikePost = (review) => {
        fetch("/like", {
          method: "put",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer" + localStorage.getItem("jwt")
          },
          body: JSON.stringify({
            reviewId: review
          })
        }).then(res => res.json())
          .then(result => {
            console.log(result)
            reviewStatusLike = "liked";
          })
      }
      const disLikePost = (review) => {
        fetch("/dislike", {
          method: "put",
          headers: {
            "Content-Type": "application/json",
            "Authorization": "Bearer" + localStorage.getItem("jwt")
          },
          body: JSON.stringify({
            reviewId: review
          })
        }).then(res => res.json())
          .then(result => {
            console.log(result)
            reviewStatusDislike = "disliked";
          })
      };
      var likeColor = "#40A062";
      var dislikeColor = "#FF6665";
      var like_dislike = $('.rev-con-self.{{cardNum}} .buttons .like-dislike svg');


      if (likeList.length != 0)
        if (likeList[0].includes(viewer)) {
          $('.rev-con-self.{{cardNum}} .buttons .like-dislike .like').css('fill', likeColor);
        } else {
          $('.rev-con-self.{{cardNum}} .buttons .like-dislike .like').css('fill', 'none');
        }

      if (dislikeList.length != 0)
        if (dislikeList[0].includes(viewer)) {
          $('.rev-con-self.{{cardNum}} .buttons .like-dislike .dislike').css('fill', dislikeColor);
        } else {
          $('.rev-con-self.{{cardNum}} .buttons .like-dislike .dislike').css('fill', 'none');
        }

      like_dislike.on('click', function (e) {
        let className = e.currentTarget.classList[0];
        let pressedButton = $('.rev-con-self.{{cardNum}} .buttons .like-dislike .' + className);
        let unpressedButton = $('.rev-con-self.{{cardNum}} .buttons .like-dislike .' + (className == 'like' ? 'dislike' : 'like'));

        let pressedLikeButton = $('.rev-con-self.{{cardNum}} .buttons .like-dislike .like');
        let pressedDisLikeButton = $('.rev-con-self.{{cardNum}} .buttons .like-dislike .dislike');

        let pressedCount = parseInt($('.rev-con-self.{{cardNum}} .buttons .' + className + '-count').text())
        let unpressedCount = parseInt($('.rev-con-self.{{cardNum}} .buttons .' + (className == 'like' ? 'dislike' : 'like') + '-count').text())

        //COLOR AND COUNT UPDATE
        if (pressedButton.css('fill') != 'none') {
          pressedButton.css('fill', 'none');
          $('.rev-con-self.{{cardNum}} .buttons .' + className + '-count').text(pressedCount - 1)
        } else {
          pressedButton.css('fill', className == 'like' ? likeColor : dislikeColor);
          if (unpressedButton.css('fill') != 'none')
            $('.rev-con-self.{{cardNum}} .buttons .' + (className == 'like' ? 'dislike' : 'like') + '-count').text(unpressedCount - 1)
          unpressedButton.css('fill', 'none');
          $('.rev-con-self.{{cardNum}} .buttons .' + className + '-count').text(pressedCount + 1)
        }

        // DATABASE UPDATE
        if (className === 'like') {
          LikePost(review);
        } else if (className === 'dislike') {
          disLikePost(review);
        }
      });
    } else {
      var like_dislike = $('.rev-con-self.{{cardNum}} .buttons .like-dislike svg');
      like_dislike.on('click', function () {
        window.location.href = "/login";
      })
    }

    // CHANGE CAROUSEL BULLET FUNCTIONALITY
    let images = {{{ images }}};
    let num_of_images = 0;
    for (const key in images)
      if (images[key] != "")
        num_of_images++;


    var bullets = $('.rev-con-self.{{cardNum}} .images .bullets');
    if (num_of_images > 0) {
      if (num_of_images > 1) {
        let gaps = [20, 10, 5, 0];
        for (let index = 1; index < num_of_images + 1; index++) {
          let cx = 36 / num_of_images / 3 + (gaps[num_of_images - 1]) + 10 * (index - 1) - 5;
          let circle = '<circle class="bullet-' + index + '" ' + 'cx="' + (gaps[1] + cx) + '" cy="3.36317" r="3"  fill="' + (index == 1 ? '#7FBF8D' : '#EEF6D9') + '"/>';
          bullets[0].innerHTML += circle;
        }
      } else {
        $('.rev-con-self.{{cardNum}} .images .img-container *').css('display', 'block');
      }
    } else {
      $('.rev-con-self.{{cardNum}} .images').css('display', 'none');
    }

    //CAROUSEL FUNCTIONALITY
    var tracker = $('.rev-con-self.{{cardNum}} .images .img-container .tracker');
    var slides = $('.rev-con-self.{{cardNum}} .images .img-container .tracker .slide');
    var prev = $('.rev-con-self.{{cardNum}} .images .left');
    var next = $('.rev-con-self.{{cardNum}} .images .right');
    var bullets = $('.rev-con-self.{{cardNum}} .images .bullets');
    var slideWidth = slides[0].clientWidth;
    var currentBullet = 1;
    if (num_of_images == 1) {
      prev.css('display', 'none');
      next.css('display', 'none');
    }

    var moveToSlide = (tracker, currentSlide, targetSlide) => {
      tracker.css('transform', 'translateX(-' + targetSlide[0].style.left + ')');
      currentSlide.removeClass('current-slide');
      targetSlide.addClass('current-slide');
    }
    var updateBullets = (change) => {
      $('.rev-con-self.{{cardNum}} .images .bullets circle').css('fill', '#EEF6D9');
      currentBullet += change;
      $('.rev-con-self.{{cardNum}} .images .bullets .bullet-' + currentBullet).css('fill', '#7FBF8D');
    }

    prev.css('display', 'none');

    for (let index = 0; index < slides.length; index++) {
      slides[index].style.left = index * slideWidth + 'px';
    }

    prev.on('click', function (e) {
      let currentSlide = tracker.find('.current-slide');
      let prevSlide = currentSlide.prev();
      prev.css('display', 'initial');
      next.css('display', 'initial');
      updateBullets(-1);
      if (currentBullet == 1) {
        prev.css('display', 'none');
      }
      moveToSlide(tracker, currentSlide, prevSlide);
    });

    next.on('click', function (e) {
      let currentSlide = tracker.find('.current-slide');
      let nextSlide = currentSlide.next();
      prev.css('display', 'initial');
      next.css('display', 'initial');
      if (currentBullet == num_of_images - 1) {
        next.css('display', 'none');
      }
      currentSlide.css('animation', 'moveLeft 0.5s ease-in-out');
      moveToSlide(tracker, currentSlide, nextSlide);
      updateBullets(1);
    });

    var textarea = $('.rev-con-self.{{cardNum}} .reply .add-reply');
    textarea.on('keyup', function (e) {
      textarea[0].style.height = "auto";
      let scHeight = e.target.scrollHeight;
      textarea[0].style.height = scHeight + "px";
    });

    // EDIT/DELETE FUNCTIONALITY
    var isPostOwner = {{ isPostOwner }};
    var reviewInfo = {
      id: review,
      postTitle: "{{postTitle}}",
      rating: rating,
      description: "{{description}}",
      restoName: "{{restoName}}",
    }

    if (isPostOwner) {
      $('.rev-con-self.{{cardNum}} .buttons .edit_delete').show();
    }

    $('.rev-con-self.{{cardNum}} .buttons .edit_delete .edit').on('click', function () {
      $('body').append($('<div class="cover-edit" style="position: fixed; top: 0; z-index: 4; width: 100vw; height: 100vh; background-color: black; opacity: 0.5; display: none;"></div>'));

      setTimeout(function () {
        $('body').css('overflow', 'hidden');
        $('body').append($('<div class="edit-card" style="display: none; position: relative; z-index: 5;"></div>').load('/edit-review', { post: reviewInfo }))
        $('.cover-edit').fadeIn();
        $('.edit-card').fadeIn();
      }, 200);
    });

    setTimeout(function () {
      $('.rev-con-self.{{cardNum}} .edit_delete .delete').on('click', function () {
        $('.rev-con-self.{{cardNum}} .delete-button').click();
      });
    }, 300);
        });
  </script>
</body>

</html>