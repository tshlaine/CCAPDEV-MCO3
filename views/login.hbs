<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login/Register</title>
    <link rel="icon" type="image/png" href="/assets/Cafe St Logo.PNG" />
    <link rel="stylesheet" href="/styles/login.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <script src="/script/login.js"></script>
  </head>
  <body>
    
    <!-- Go Back Button -->
    <div style="position: absolute; top: 10px; left: 10px;">
      <a href="/" class="go-back-btn" style="text-decoration: none; color: inherit;">
        <i class="fas fa-arrow-left"></i> Back to homepage
      </a>
    </div>
   
  
    <div id="alert-container" class="alert-container">
      <p id="alert-message" class="alert-message"></p>
    </div>

    <div class="card" id="form-container">
      <div class="form-card register-card">
        <form
          id="registration-form" action="/sign-up"
          method="POST" 
          {{!-- enctype="application/x-www-form-urlencoded" --}}
        >
          <h1 style="color: #ab9a7c; font-family: 'Poppins';">Register</h1>
          
            <input class = "name" name ="firstName" type="text" placeholder="First Name">
                    <input class = "name" name="lastName" type="text" placeholder="Last Name">
                    <input class = "other" name="emailSignup" type="text" placeholder="Email">
                    <input class = "other" name="passwordSignup" type="password" placeholder="Password">
          <button type="submit">Register</button>
        </form>
      </div>

      <div class="form-card login-card">
        <form method="POST" id="login-form" action ="/login">
          <h1 style="color: #ab9a7c; font-family: 'Poppins';">Login</h1>
          <input
            class="form-control"
            name="emailLogin"
            id="email"
            placeholder="Email"
          />
          <input
            class="form-control"
            name="passwordLogin"
            id="password"
            type="password"
            placeholder="Password"
          />
          <div class="content">
            <div class="checkbox">
              <input type="checkbox" name="checkbox" id="checkbox" />
              <label for="checkbox">Remember me</label>
            </div>
                    <a href="/forgot-password">Forgot Password?</a>
          </div>
          <button type="submit">Login</button>
        </form>
      </div>

      <div class="overlay-card">
        <div class="overlay">
          <div class="overlay-panel overlay-left">
            <h1 class="title">Cafe St.</h1>
            <p>If you have an account, login here</p>
            <button class="ghost form-toggle-button" id="signIn">Login
              <i class="lni lni-arrow-left"></i>
            </button>
          </div>
          <div class="overlay-panel overlay-right">
            <h1 class="title">Cafe St.</h1>
            <p>If you haven't registered yet, join and embark on your journey
              with us.</p>
            <button class="ghost form-toggle-button" id="signUp">Register
              <i class="lni lni-arrow-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

  
</html>